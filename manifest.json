{
  "manifest_version": 2,

  "name": "Trello Viewer",
  "version": "0.1",

  "author": "kyoh86",
  "homepage_url": "https://github.com/kyoh86/trelloviewer",
  "description": "This extension show cards/lists/boards on trello clearly.",
  "permissions": [
    "https://trello.com/",
    "https://api.trello.com/",
    "storage"
  ],
  "web_accessible_resources" :[
    "html/options.html"
  ],
  "content_security_policy": "script-src 'self' https://api.trello.com; object-src 'self'",
  "browser_action": {
    "default_icon": "icon/icon.png",
    "default_popup": "html/popup.html"
  },
  "options_page": "html/options.html"
}
